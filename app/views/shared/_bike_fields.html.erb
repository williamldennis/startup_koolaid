<%= form_for(@bike) do |f| %>

<%= render 'shared/error_messages', :object => f.object %>
<div class="field" id="namefield">
	<%= f.label :name, "Title" %> <br />
	<%= f.text_field :name %>
</div>
<div class="field">
	<%= f.label :description, "A little about your bike" %> <br />
	<%= f.text_area :description, :rows => 5 %>
</div>
<div class="field">
	<%= f.label :size, "Your Height" %> <br />
	<%= f.text_field :size %>
</div>
<div class="field">
	<%= f.label :biketype, "Bike Type (ex Road, Mountain, Pro)" %> <br />
	<%= f.text_field :biketype %>
</div>
<div class="field">
	<%= f.label :price, "Daily Rental Price" %> <br />
	<%= f.text_field :price %>
</div>
<div>
	<%= f.file_field :photo %>
</div>
<div class="actions">
   <%= f.submit "List Your Bike" %>
	(It's free)
</div>
<% end %>