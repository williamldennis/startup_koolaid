<div>
<%= link_to_function "Back to Search", "history.back()"%>
</div>

<div id="everythingshow">
	<div id="showtable">
	<ul id="showlist">
		
		<div id="showitemoutside">



			<li id="showbikeitem" class="round">
						    <%= @bike.name %></br>
							<%= image_tag(@bike.photo.url(:large)) %> </br>
						    <%= number_to_currency(@bike.price, :unit => "$") %> per day </br>
			</li>
			
			<div id="reviewoutside">
			
			<li id="reviewitem" class="round">
						    Reviews </br>
						
								<%= render 'reviews/review'%>
				
							<% if @user = signed_in? %>
							

							
								<%= form_for @bike do |f| %>
								  Add a Review <%= f.text_field :reviews %> </br>
								  <%= f.submit "Set Dates" %>
								<% end %></br>
								
							<% end %>
							</div>

			</li>
			
		</div>
		

					
		<div id="showitemoutside">
			<div id="showinfopadding">
				<li id="showinfoitem" class="round">
						<div id="bikeownerinfo">
							<strong>Owner:</strong> </br>
							<%= link_to @bike.user.name, @bike.user %> </br>
							Owns <%= @bike.user.bikes.count %> Bikes </br>
						</div>
						<div id="bikeusergravatar"><%= gravatar_for @bike.user, :size => 75%> </div>
				</li>
			</div>
			<div id="showinfopadding">
				<li id="showinfoitem" class="round">
						<strong>Height Range:</strong>  <%= @bike.size %> (+/- 3 inches) </br>
						<strong>Bike Type:</strong>   <%= @bike.biketype %> </br>
						<strong>Neighborhood:</strong> <%= @bike.neighborhood %> </br>
						<strong>Description:</strong> <%= @bike.description %> </br>
						<%= button_to "Rent this Bicycle!", line_items_path(:bike_id => @bike), {:class => "checkoutbutton"} %> 
				</li>
			</div>
			<div id="showinfopadding">
				<li id="showmapitem" class="round">
							    <%= image_tag "http://maps.googleapis.com/maps/api/staticmap?zoom=14&size=300x300&sensor=false&markers=#{@bike.latitude}%2C#{@bike.longitude}" %>
				</li>
			</div>
			<div id="nearbybikeitem" class="round">
				Nearby Bikes </br>
			<% for bike in @bike.nearbys(10).limit(2) %>
			  <li id="nearbybikes"><%=  link_to image_tag(bike.photo(:thumb)), bike %> </br> (<%= bike.distance.to_f.round(2) %> miles)</li>
			<% end %>
			</div>
			
		</div>
	</ul>
	</div>
</div>









