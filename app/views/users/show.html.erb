<table class="profile" summary= "Profile information">
	<tr>
		<td class="main">
			<h1 id="gravataricon">
				<%= gravatar_for @user %>
			</h1>
			<h1 id="username">
				<%= @user.name %>
			</h1>
			<% if @user.bikes.any? %>
				<table class="bikes" summary="User bikes">
					<%= render @bikes %>
				</table>
				<%= will_paginate @bikes %>
			<% end %>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name %><br />
			<strong>URL</strong>  <%= link_to user_path(@user), @user %><br />
			<strong>Bikes</strong> <%= @user.bikes.count %>
		</td>
	</tr>
	
	
</table>

