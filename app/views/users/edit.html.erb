<h1 id="signuppagetitle">Edit User</h1>
<div id="listabike" class="round">
<%= form_for(@user)  do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
	<%= render 'fields', :f => f %>  
	<div class="actions">
	  	<%= f.submit "Update" %> 
    </div>
<% end %>

<div id="gravataricon">
	<%= gravatar_for @user %> </br>
	<a href="http://gravatar.com/emails" target=_blank>Change Profile Picture</a>
</div>
</div>