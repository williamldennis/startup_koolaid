
<div id="hometextdiv">
<h1 id="hometitle">Find a bike to ride.</h1> 
<div>
<p id="hometext">Rent bikes from real people all over the world.</p>
<% form_tag bikes_path, :method => 'get' do  %> 

<div id="findabike" class="round">
<p id="hometext">
	<strong id="whereride">Where Do You Want to Ride? </strong></br>
	<%= text_field_tag :search, params[:search], :size => 50, :class => 'hometextfield' %> </br>
	ex. New York </br>
	<%= submit_tag "Find a Bike", :name => nil, :class => 'findabikebutton' %> 
</p>

<% end %>

</div>
</div>
<div id="homepic">
<%= image_tag("bike-jpeg-blog.gif", :alt => "Great looking bike", :class => "round", :height => 310) %>
</div>

</div>
